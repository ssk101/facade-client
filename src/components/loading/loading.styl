:host
  display: flex
  align-items: center
  justify-content: center
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: rgba(0,0,0,.75)
  transition: opacity .25s ease-in-out
  z-index: 100
  pointer-events: none

:host([loading-text=''])
  opacity: 0

:host(:not([loading-text='']))
  opacity: 1

h1
  animation: pulse 1s infinite alternate ease-in-out

@keyframes pulse
  0%
    opacity: 0.25
  50%
    opacity: 0.5
  100%
    opacity: 1